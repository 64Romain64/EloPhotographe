<div class="container-full">
	<div class="row margin-lg-60b margin-sm-20b margin-xs-25b">
		<div class="col-sm-12 ">
			<div class="container-fluid top-banner full-height-window center_content">
				{% if photo %}
					<img data-lazy-src="{{ asset ('images/' ~ photo[0].file) | imagine_filter('welcome') }}" src="{{ asset ('images/' ~ photo[0].file) | imagine_filter('welcome') }}" class="s-img-switch" alt="{{photo[0].description}}"/>
				{% else %}
					<img data-lazy-src="#" src="#" class="s-img-switch" alt=""/>
				{% endif %}
				<div class="content">
					<div class="row text-light">
						<div class="col-xs-12">
							{% if app.user %}
								<h1 class="title">
									Bienvenue
									{{ app.user.prenom}}</h1>
							{% else %}
								<h4 class="subtitle">Street</h4>
								<h1 class="title">ELO PHOTOGRAPHE</h1>
								<p class="descr">New York studio and outdoor commercial photography by professional photographer Whizz</p>
							{% endif %}

							<a href="{{path ('about')}}" class="a-btn">
								See more
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
