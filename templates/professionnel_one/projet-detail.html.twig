{% extends 'base.html.twig' %}

{% block title %}

	Elo Photographe - Objet

{% endblock %}

{% block body %}

	{% include "main/_header.html.twig" %}
	{% for photo in projet.photo.snapshot %}
		{% if photo.etat == "1" %}
			<div class="container-full">
				<div class="row margin-lg-60b margin-sm-20b margin-xs-25b">
					<div class="col-sm-12 ">

						<div class="container-fluid top-banner full-height-window center_content">
							<img data-lazy-src="{{ asset ('images/' ~ photo.file) }}" src="{{ asset ('images/' ~ photo.file) }}" class="s-img-switch" alt=""/>
							<div class="content">
								<div class="row text-light">
									<div class="col-xs-12">
										<h4 class="subtitle">Street</h4>
										<h1 class="title">{{projet.titre}}</h1>
										<p class="descr">{{projet.description}}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
	<div class="container clearfix no-padd portfolio-single-content margin-lg-30b ">
		<div class="row">
			<div class="col-xs-12"></div>
		</div>
		<div class="container clearfix no-padd ">
			<div class="gallery-single margin-lg-10b margin-xs-0b col-6" data-thumb="true" data-space="15">
				<div class="izotope-container">
					<div class="grid-sizer"></div>
					{% for photo in projet.photo.snapshot %}
						{% if photo.etat == "2" %}

							<div class="modern item-single ">
								<a href="{{ asset ('images/' ~ photo.file) }}" class="gallery-item modern ">
									<img data-lazy-src="{{ asset ('images/' ~ photo.file) }}" src="{{ asset ('images/' ~ photo.file) }}" class="" alt="{{photo.nom}}"/>
									<div class="info-content">
										<div class="vertical-align">
											<h5>{{photo.nom}}</h5>
										</div>
									</div>
								</a>
							</div>

						{% endif %}
					{% endfor %}
				</div>
			</div>

		</div>


	</div>

{% endblock %}
