{% extends 'base.html.twig' %}

{% block title %}

	Elo Photo -
	{{projet.titre}}

{% endblock %}

{% block body %}

	{% include "main/_header.html.twig" %}
	{% for photo in projet.photo.snapshot %}
					{% if photo.etat == "1" %}
						<div class="container-full">
							<div class="row margin-lg-60b margin-sm-20b margin-xs-25b">
								<div class="col-sm-12 ">
			
									<div class="container-fluid top-banner full-height-window center_content">
										<img data-lazy-src="{{ asset ('images/' ~ photo.file) }}" src="{{ asset ('images/' ~ photo.file) }}" class="s-img-switch" alt=""/>
										<div class="content">
											<div class="row text-light">
												<div class="col-xs-12">
													<h4 class="subtitle">Street</h4>
													<h1 class="title">{{projet.titre}}</h1>
													<p class="descr">{{projet.description}}</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}

	<div class="container">
		<div class="hero">
			<div class="wpb_wrapper">
				<div class="marg_discriminating">
					<div class="row gallery-single margin-xs-0b infinite_gallery" data-thumb="true">
						<div class="izotope-container-2">

							{% for photo in projet.photo.snapshot %}
								{% if photo.etat == "2" %}
									<div class="fullwidth full-single item-single item1">
										<a href="{{ asset ('images/' ~ photo.file) }}" class="gallery-item s-back-switch">
											<img data-lazy-src="{{ asset ('images/' ~ photo.file) | imagine_filter('photo') }}" src="{{ asset ('images/' ~ photo.file) | imagine_filter('photo') }}" class="s-img-switch" alt="Pharetra"/>
											<div class="info-content">
												<div class="vertical-align">
													<h5>{{photo.nom}}</h5>
												</div>
											</div>
										</a>
									</div>
								{% endif %}
							{% endfor %}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
